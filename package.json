          "Cut": {
            "type": "boolean",
            "default": false,
            "description": "show icon for 'Cut'"
          },
          "Copy": {
            "type": "boolean",
            "default": false,
            "description": "show icon for 'Copy'"
          },
          "Paste": {
            "type": "boolean",
            "default": false,
            "description": "show icon for 'Paste'"
          },
          "Compare with saved": {
            "type": "boolean",
            "default": false,
            "description": "show icon for 'Compare active file with saved'"
          },
          "Open command pallet": {
            "type": "boolean",
            "default": false,
            "description": "show icon for 'Open command pallet / Show all commands'"
          },
          "Start debugging": {
            "type": "boolean",
            "default": false,
            "description": "show icon for 'Start debugging'"
          },
          "Love2d": {
            "type": "boolean",
            "default": true,
            "description": "show icon for 'Love2d'"
          }
        }
      }
    ],
